{
	"version": 2,
	"name": "flatbutton",
	"builds": [
		{ "src": "package.json", "use": "@now/static-build" },
		{ "src": "tracking/index.js", "use": "@now/node" }
	],
  "env": {
    "DBURI": "@dburi"
  },
	"routes": [
		{ "src": "/fltbttn.js", "dest": "/tracking" },
		{ "src": "/trackvmod", "dest": "/tracking" },
		{ "src": "/t", "dest": "/tracking" },
		{ "src": "/newuid", "dest": "/tracking" },
		{ "src": "/uid", "dest": "/tracking" },
		{ "src": "/uids", "dest": "/tracking" },
		{ "src": "/stats", "dest": "/tracking" },
		{ "src": "/(.*)", "dest": "/$1"}
	],
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Access-Control-Allow-Origin",
          "value" : "https://flatbutton.co"
        },
        {
          "key" : "X-Frame-Options",
          "value" : "DENY"
        },
        {
          "key" : "X-XSS-Protection",
          "value" : "1; mode=block"
        },
        {
          "key" : "Cache-Control",
          "value" : "no-cache"
        },
        {
          "key" : "Cache-Control",
          "value" : "no-store"
        },
        {
          "key" : "Cache-Control",
          "value" : "must-revalidate"
        },
        {
          "key" : "Pragma",
          "value" : "no-cache"
        },
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        }
      ]
    }
  ]
}
